<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!-- 
  MainView.fxml (O "Shell" da Aplicação)
  ATUALIZADO:
  - Itens do menu lateral agrupados por seções (Geral, Financeiro, Operações, Relatórios)
  - Adicionados Labels para os títulos das seções.
-->
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmmanager.controller.MainViewController">
   <left>
      <!-- Menu Lateral de Navegação (com ícones) -->
      <VBox prefWidth="200.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="sidebar-title" text="FarmManager" />
            
            <!-- GERAL -->
            <Label styleClass="sidebar-section-title" text="GERAL" />
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleShowDashboard" prefHeight="40.0" prefWidth="200.0" text="Dashboard">
               <graphic>
                  <FontAwesomeIconView glyphName="HOME" size="1.2em" styleClass="sidebar-icon" />
               </graphic>
            </Button>
            
            <!-- FINANCEIRO -->
            <Label styleClass="sidebar-section-title" text="FINANCEIRO" />
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleShowContas" prefHeight="40.0" prefWidth="200.0" text="Contas (Pagar/Receber)">
               <graphic>
                  <FontAwesomeIconView glyphName="CALENDAR" size="1.2em" styleClass="sidebar-icon" />
               </graphic>
            </Button>
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleShowFinanceiro" prefHeight="40.0" prefWidth="200.0" text="Financeiro (Caixa)">
               <graphic>
                  <FontAwesomeIconView glyphName="DOLLAR" size="1.2em" styleClass="sidebar-icon" />
               </graphic>
            </Button>
            
            <!-- OPERAÇÕES -->
            <Label styleClass="sidebar-section-title" text="OPERAÇÕES" />
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleShowSafras" prefHeight="40.0" prefWidth="200.0" text="Safras e Talhões">
               <graphic>
                  <FontAwesomeIconView glyphName="LEAF" size="1.2em" styleClass="sidebar-icon" />
               </graphic>
            </Button>
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleShowEstoque" prefHeight="40.0" prefWidth="200.0" text="Insumos/Produtos">
               <graphic>
                  <FontAwesomeIconView glyphName="ARCHIVE" size="1.2em" styleClass="sidebar-icon" />
               </graphic>
            </Button>
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleShowPatrimonio" prefHeight="40.0" prefWidth="200.0" text="Patrimônio">
               <graphic>
                  <FontAwesomeIconView glyphName="TRUCK" size="1.2em" styleClass="sidebar-icon" />
               </graphic>
            </Button>
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleShowFuncionarios" prefHeight="40.0" prefWidth="200.0" text="Funcionários">
               <graphic>
                  <FontAwesomeIconView glyphName="USERS" size="1.2em" styleClass="sidebar-icon" />
               </graphic>
            </Button>
            
            <!-- RELATÓRIOS -->
            <Label styleClass="sidebar-section-title" text="RELATÓRIOS" />
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#handleShowHistoricoSafras" prefHeight="40.0" prefWidth="200.0" text="Histórico de Safras">
               <graphic>
                  <FontAwesomeIconView glyphName="BAR_CHART" size="1.2em" styleClass="sidebar-icon" />
               </graphic>
            </Button>
         </children>
      </VBox>
   </left>
   <center>
      <!-- Área de Conteúdo Principal -->
      <!-- Este StackPane é o container onde as outras telas serão injetadas -->
      <StackPane fx:id="contentArea" styleClass="content-area" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
