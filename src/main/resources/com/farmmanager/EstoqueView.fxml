<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Tela de Gestão de Estoque -->
<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmmanager.controller.EstoqueController">
   <children>
      <Label styleClass="content-title" text="Gestão de Estoque" />
      <HBox styleClass="module-toolbar">
         <children>
            <Button mnemonicParsing="false" styleClass="module-button" text="+ Adicionar Item" />
            <Button mnemonicParsing="false" styleClass="module-button, danger" text="- Remover Item" />
         </children>
      </HBox>
      <TableView fx:id="tabelaEstoque" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colItemId" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="colItemNome" prefWidth="350.0" text="Nome do Item" />
            <TableColumn fx:id="colItemQtd" prefWidth="150.0" text="Quantidade" />
            <TableColumn fx:id="colItemUnidade" prefWidth="150.0" text="Unidade" />
         </columns>
      </TableView>
   </children>
</VBox>
