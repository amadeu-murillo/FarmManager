<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Tela de Gestão de Estoque -->
<!-- 
  ATUALIZADO: 
  - Renomeado "+ Adicionar Item" para "+ Comprar Item" (agora lança despesa).
  - Adicionado botão "Vender Item" (lança receita).
  - Botão "Consumir Item" agora tem estilo 'warning' e lança despesa.
-->
<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmmanager.controller.EstoqueController">
   <children>
      <Label styleClass="content-title" text="Gestão de Estoque" />
      <HBox styleClass="module-toolbar">
         <children>
            <Button mnemonicParsing="false" onAction="#handleComprarItem" styleClass="module-button" text="+ Comprar Item" />
            <Button mnemonicParsing="false" onAction="#handleVenderItem" styleClass="module-button, success" text="Vender Item" />
            <Button mnemonicParsing="false" onAction="#handleConsumirItem" styleClass="module-button, warning" text="Consumir Item (Uso Interno)" />
            <Button mnemonicParsing="false" onAction="#handleRemoverItem" styleClass="module-button, danger" text="- Remover Item (Ajuste)" />
         </children>
      </HBox>
      <TableView fx:id="tabelaEstoque" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colItemId" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="colItemNome" prefWidth="300.0" text="Nome do Item" />
            <TableColumn fx:id="colItemQtd" prefWidth="120.0" text="Quantidade" />
            <TableColumn fx:id="colItemUnidade" prefWidth="100.0" text="Unidade" />
            <TableColumn fx:id="colItemValorUnit" prefWidth="150.0" text="Valor Unitário (R$)" />
            <TableColumn fx:id="colItemValorTotal" prefWidth="150.0" text="Valor Total (R$)" />
         </columns>
      </TableView>
   </children>
</VBox>

