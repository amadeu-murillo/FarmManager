<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Tela de Gestão Financeira -->
<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmmanager.controller.FinanceiroController">
   <children>
      <Label styleClass="content-title" text="Gestão Financeira" />
      <HBox styleClass="module-toolbar">
         <children>
            <Button mnemonicParsing="false" styleClass="module-button" text="+ Nova Receita" />
            <Button mnemonicParsing="false" styleClass="module-button, danger" text="- Nova Despesa" />
         </children>
      </HBox>
      <TableView fx:id="tabelaFinanceiro" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colFinId" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="colFinDesc" prefWidth="350.0" text="Descrição" />
            <TableColumn fx:id="colFinValor" prefWidth="150.0" text="Valor (R$)" />
            <TableColumn fx:id="colFinData" prefWidth="150.0" text="Data" />
            <TableColumn fx:id="colFinTipo" prefWidth="100.0" text="Tipo" />
         </columns>
      </TableView>
   </children>
</VBox>
