<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Tela de Gestão de Safras e Talhões -->
<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.farmmanager.controller.SafrasController">
   <children>
      <Label styleClass="content-title" text="Gestão de Safras e Talhões" />
      <HBox styleClass="module-toolbar">
         <children>
            <Button mnemonicParsing="false" styleClass="module-button" text="+ Nova Safra" />
            <Button mnemonicParsing="false" styleClass="module-button" text="+ Novo Talhão" />
         </children>
      </HBox>
      <!-- TODO: Adicionar uma segunda tabela para Talhões -->
      <TableView fx:id="tabelaSafras" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colSafraId" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="colSafraCultura" prefWidth="200.0" text="Cultura" />
            <TableColumn fx:id="colSafraAno" prefWidth="100.0" text="Ano" />
            <TableColumn fx:id="colSafraTalhao" prefWidth="250.0" text="Talhão" />
            <TableColumn fx:id="colSafraProd" prefWidth="150.0" text="Produção (kg)" />
         </columns>
      </TableView>
   </children>
</VBox>
